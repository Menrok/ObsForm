@model ObsForm.Models.Dane

<head>
    <style>
        .form-group {
            margin-bottom: 1rem;
        }
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
        }
        .form-group input,
        .form-group textarea {
            width: 100%; 
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            padding: 0.5rem 1rem;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<h2>Formularz danych</h2>

<form asp-action="Form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Imię:</label>
        <input asp-for="Imie" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Temat:</label>
        <input asp-for="Temat" />
        <span asp-validation-for="Temat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Treść:</label>
        <textarea asp-for="Tresc"></textarea>
        <span asp-validation-for="Tresc" class="text-danger"></span>
    </div>
    <button type="submit">Wyślij</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}